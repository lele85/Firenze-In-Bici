<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:background="@drawable/list_element_bg_selector">

    <ImageView
        android:id="@+id/routeimage"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:contentDescription="@+string/imagedescription" />

    <LinearLayout
        android:layout_toRightOf="@id/routeimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/route_name_and_composition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/firenzeDarkGray"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/route_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:shadowColor="@color/firenzeLightGray"
            android:shadowRadius="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/route_distance_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/firenzeLightGray"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</RelativeLayout>