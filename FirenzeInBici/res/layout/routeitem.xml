<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <ImageView android:id="@+id/routeimage"
                android:layout_width="120dip"
                android:layout_height="60dip"
                android:contentDescription="@+string/routedescription"/>
        
        <TextView android:id="@+id/route_lenght"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_toRightOf="@id/routeimage"/>
        
        <TextView android:id="@+id/routenumber"
            	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@id/routeimage"
                android:layout_below="@+id/route_lenght"/>
</RelativeLayout>